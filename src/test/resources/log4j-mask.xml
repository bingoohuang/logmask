<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>

    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <param name="target" value="System.out"/>
        <layout class="cn.bjca.footstone.logmask.Log4jMaskLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %C:%L - %m%n"/>
            <param name="Masks" value="pattern=\\d{12}\\d{3,5}[xX]? leftKeep=3 rightKeep=3 mask=*** boundary=true"/>
            <param name="Masks" value="pattern=\\d{5}"/>
        </layout>
    </appender>

    <root>
        <priority value="info"/>
        <appender-ref ref="STDOUT"/>
    </root>
</log4j:configuration>